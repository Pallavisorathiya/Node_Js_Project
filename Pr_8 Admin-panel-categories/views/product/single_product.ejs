<%- include('../header') %>

<style>
/* ====== PRODUCT DETAIL PAGE CUSTOM DESIGN ====== */

.product-card {
    border-radius: 15px;
    overflow: hidden;
    background: #ffffff;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.product-image {
    height: 100%;
    width: 100%;
    object-fit: cover;
}

.product-body {
    padding: 30px;
}

.product-title {
    font-size: 32px;
    font-weight: 700;
    color: #333;
}

.product-desc {
    font-size: 15px;
    color: #666;
}

.price-box {
    background: #f1f9f3;
    border-left: 5px solid #28a745;
    padding: 12px 18px;
    border-radius: 10px;
    margin: 20px 0;
}

.info-row strong {
    width: 150px;
    display: inline-block;
    color: #444;
    font-weight: 600;
}

.btn-custom {
    border-radius: 30px;
    padding: 10px 22px;
    font-weight: 600;
    letter-spacing: .5px;
}
</style>

<div class="page-wrapper">
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">

                <div class="product-card">
                    <div class="row no-gutters">

                        <!-- Image -->
                        <div class="col-md-5">
                            <img src="<%= product.productImage %>" 
                                 alt="<%= product.title %>" 
                                 class="product-image">
                        </div>

                        <!-- Details -->
                        <div class="col-md-7">
                            <div class="product-body">

                                <h2 class="product-title"><%= product.title %></h2>

                                <p class="product-desc">
                                    <%= product.desc %>
                                </p>

                                <!-- Price Box -->
                                <div class="price-box">
                                    <div>
                                        <strong>Price:</strong>
                                        <span class="text-success h4 mb-0">â‚¹ <%= product.price %></span>
                                    </div>
                                    <div>
                                        <strong>Available:</strong>
                                        <%= product.quantity %> units
                                    </div>
                                </div>

                                <!-- Info Rows -->
                                <div class="info-row"><strong>Category:</strong>
                                    <%= product.category ? product.category.categoryName : "N/A" %>
                                </div>

                                <div class="info-row"><strong>Subcategory:</strong>
                                    <%= product.subcategory ? product.subcategory.subCategoryName : "N/A" %>
                                </div>

                                <div class="info-row"><strong>Extra Category:</strong>
                                    <%= product.extracategory ? product.extracategory.extraCategory : "N/A" %>
                                </div>

                                <!-- Buttons -->
                                <div class="mt-4">
                                    <a href="/product/edit-product/<%= product._id %>"
                                       class="btn btn-warning btn-custom">
                                        <i class="fas fa-edit mr-1"></i> Edit
                                    </a>

                                    <a href="/product/delete-product/<%= product._id %>"
                                       class="btn btn-danger btn-custom ml-2"
                                       onclick="return confirm('Are you sure you want to delete this product?');">
                                       <i class="fas fa-trash mr-1"></i> Delete
                                    </a>

                                    <a href="/product/view-product"
                                       class="btn btn-secondary btn-custom ml-2">
                                       <i class="mdi mdi-arrow-left"></i> Back
                                    </a>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
