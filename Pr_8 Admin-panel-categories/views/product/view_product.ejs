<%- include('../header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Product Collection</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Products</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <!-- Search Form -->
        <div class="mb-4 text-center">
            <form method="GET" action="/product/view-product" class="form-inline justify-content-center">
                <input type="text" name="search" class="form-control mr-2" placeholder="Search products..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>">

                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>

        <!-- CATEGORY FILTER BUTTONS -->
        <div class="mb-4 text-center">
            <% const colors=['primary','success','danger','info','warning','dark']; %>

            <!-- ALL Button -->
            <a class="btn btn-dark btn-filter mr-2 mb-2 <%= !category ? 'active' : '' %>"
                href="/product/view-product">All</a>

            <!-- Dynamic Category Buttons -->
            <% categories.forEach((cat, index)=> {
                const colorClass = colors[index % colors.length];
            %>
                <a class="btn btn-<%= colorClass %> btn-filter mr-2 mb-2 <%= category == cat._id ? 'active' : '' %>"
                    href="/product/view-product?category=<%= cat._id %>">
                    <%= cat.categoryName %>
                </a>
            <% }); %>
        </div>

        <!-- Product Grid -->
        <div class="row">
            <% if (allProducts.length===0) { %>
                <div class="col-12 text-center">
                    <h4>No Products Found</h4>
                </div>
            <% } %>

            <% allProducts.forEach((product)=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="<%= product.productImage %>" class="card-img-top"
                            alt="<%= product.title %>">

                        <div class="card-body">
                            <h5 class="card-title"><%= product.title %></h5>
                            <p class="text-muted">
                                <%= product.category ? product.category.categoryName : 'N/A' %>
                            </p>
                            <h6 class="text-success font-weight-bold">
                                â‚¹ <%= product.price %>
                            </h6>
                        </div>

                        <div class="card-footer bg-transparent border-0 text-right">
                            <a href="/product/single-product/<%= product._id %>"
                                class="btn btn-primary btn-sm btn-view">
                                <i class="m-r-10 mdi mdi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

    </div>
</div>

<%- include('../footer') %>

<style>

/* Page Background */
.page-wrapper {
    background: #f5f7fb;
    padding-bottom: 40px;
}

/* Title */
.page-title {
    font-weight: 700;
    letter-spacing: 0.5px;
    color: #2c3e50;
}

/* Category Buttons */
.btn-filter {
    border-radius: 30px;
    padding: 8px 20px;
    font-weight: 500;
    transition: 0.3s ease;
}

.btn-filter:hover,
.btn-filter.active {
    transform: translateY(-3px);
    box-shadow: 0px 6px 14px rgba(0,0,0,0.18);
}

/* Card Design */
.card {
    border-radius: 16px;
    overflow: hidden;
    background: #ffffff;
    border: none;
    transition: 0.35s ease;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
}

.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 14px 28px rgba(0,0,0,0.18);
}

/* Product Image */
.card-img-top {
    height: 330px;
    object-fit: cover;
    transition: 0.4s ease;
}

.card:hover .card-img-top {
    transform: scale(1.07);
    filter: brightness(90%);
}

/* Card Body */
.card-body {
    padding: 18px;
}

.card-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
}

.text-muted {
    font-size: 0.9rem;
}

/* Price Text */
.text-success {
    font-size: 1.1rem;
    font-weight: 700;
}

/* View Button */
.btn-view {
    border-radius: 30px;
    padding: 6px 16px;
    font-weight: 500;
    transition: 0.3s ease;
}

.btn-view:hover {
    transform: translateY(-3px);
    box-shadow: 0px 8px 18px rgba(0, 0, 0, 0.22);
}

/* Search Box */
.form-control {
    border-radius: 30px;
    padding: 10px 18px;
}

</style>
